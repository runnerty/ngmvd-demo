{
  "$schema": "https://raw.githubusercontent.com/runnerty/schemas/master/src/config-2.6.json",
  "general": {
    "servers": [
      {
        "id": "srv_ngmvd",
        "port": 8080,
        "endpoint": "/ngmvd"
      }
    ]
  },
  "triggers": [
    {
      "id": "server_default",
      "type": "@runnerty-trigger-server"
    },
    {
      "id": "schedule_dafault",
      "type": "@runnerty-trigger-schedule"
    }
  ],
  "executors": [
    {
      "id": "mail_default",
      "type": "@runnerty-executor-mail",
      "disable": false,
      "from": "Runnerty <somemail@runnerty.io>",
      "transport": "smtps://somemail%40runnerty.io:password@smtp.gmail.com/?pool=true",
      "templateDir": "templates",
      "template": "alerts",
      "ejsRender": true
    },
    {
      "id": "check_online_service_default",
      "type": "@runnerty-executor-check-online-service"
    }
  ],
  "notifiers": [
    {
      "id": "console_default",
      "type": "@runnerty-notifier-console"
    },
    {
      "id": "telegram_default",
      "type": "@runnerty-notifier-telegram",
      "token": "ABC123",
      "chat_id": "ABC123"
    }
  ],
  "global_values": [
    {
      "WORKDIR": {
        "PATH": "."
      }
    }
  ]
}
